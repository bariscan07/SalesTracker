<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CustomerDetailsActivity">

    <include layout="@layout/card_view_customer"/>


    <Button
        android:id="@+id/button_update_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Update Customer"/>

    <Button
        android:id="@+id/button_delete_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Customer"/>

</LinearLayout>